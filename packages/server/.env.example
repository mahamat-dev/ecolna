# Server environment
# Local Docker default uses host port 5433. Update if you change docker-compose mapping.
DATABASE_URL=postgres://postgres:postgres@localhost:5433/ecolna

# Session configuration
SESSION_SECRET=change_this_long_random_string_in_production
PORT=4000
NODE_ENV=development

# Optional Redis for session store (production)
# REDIS_URL=redis://127.0.0.1:6379

# Admin seeding (optional)
# SEED_ADMIN_EMAIL=admin@example.com
# SEED_ADMIN_PASSWORD=AdminPass123

# Storage driver: local (default) or s3
STORAGE_DRIVER=local

# Local disk (default)
LOCAL_UPLOAD_DIR=./uploads
PUBLIC_BASE_URL=http://localhost:4000

# S3 / MinIO (optional â€” leave empty if local)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_FORCE_PATH_STYLE=true